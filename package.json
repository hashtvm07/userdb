{
  "name": "user-api",
  "version": "1.0.0",
  "description": "Advanced user registration API with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "copy-package": "node -e \"require('fs').copyFileSync('package.json', 'dist/package.json')\"",
    "copy-webconfig": "node -e \"require('fs').copyFileSync('web.config', 'dist/web.config')\"",
    "copy-nodemon": "node -e \"require('fs').copyFileSync('nodemon.json', 'dist/nodemon.json')\"",
    "build": "tsc && npm run copy-package && npm run copy-webconfig && npm run copy-nodemon && start",
    "dev": "nodemon"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16",
    "mongoose": "^6.0.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/node": "^16.18.104",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  }
}
